{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules", "dist", "showcase"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noArrayIndexKey": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useSelfClosingElements": "warn"
			},
			"nursery": {
				"useSortedClasses": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedImports": "warn"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useAltText": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
